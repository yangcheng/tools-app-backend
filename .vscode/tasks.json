{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "start-backend",
            "type": "process",
            "command": "${workspaceFolder}/fastapi-app/venv/bin/python",
            "args": [
                "-m",
                "uvicorn",
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "options": {
                "cwd": "${workspaceFolder}/fastapi-app",
                "env": {
                    "PYTHONPATH": "${workspaceFolder}/fastapi-app"
                }
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*Error.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^.*Uvicorn running on.*$",
                    "endsPattern": "^.*Application startup complete.*$"
                }
            }
        }
    ]
}