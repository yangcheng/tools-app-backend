{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/fastapi-app"
            },
            "cwd": "${workspaceFolder}/fastapi-app",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Uvicorn running on (http://127.0.0.1:8000)",
                "uriFormat": "%s"
            }
        },
        {
            "name": "React Frontend",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMapPathOverrides": {
                "webpack:///./src/*": "${webRoot}/src/*"
            }
        },
        {
            "name": "Full Stack: Backend + Frontend",
            "type": "node-terminal",
            "request": "launch",
            "command": "npm run dev",
            "cwd": "${workspaceFolder}/frontend",
            "serverReadyAction": {
                "pattern": "Local:.+(https?://\\S+)",
                "uriFormat": "%s",
                "action": "debugWithChrome"
            },
            "preLaunchTask": "start-backend"
        }
    ],
    "compounds": [
        {
            "name": "Backend + Frontend",
            "configurations": [
                "FastAPI Backend",
                "React Frontend"
            ]
        }
    ]
}