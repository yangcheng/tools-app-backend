{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "app.main:app",
                "--reload",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/fastapi-app"
            },
            "cwd": "${workspaceFolder}/fastapi-app",
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "Uvicorn running on (http://127.0.0.1:8000)",
                "uriFormat": "%s"
            }
        }
    ]
}